    for (int i = 0; i < 5; i++) {
        printf("%d ", suma[i]);
    }
    printf("\n");

    printf("Resultado de la resta: ");
    for (int i = 0; i < 5; i++) {
        printf("%d ", resta[i]);
    }
    printf("\n");

    printf("Resultado de la multiplicaci贸n: ");
    for (int i = 0; i < 5; i++) {
        printf("%d ", multiplicacion[i]);
    }
    printf("\n");

    printf("Resultado de la divisi贸n: ");
    for (int i = 0; i < 5; i++) {
        printf("%.2f ", division[i]);
